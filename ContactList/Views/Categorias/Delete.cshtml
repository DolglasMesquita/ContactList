@model ContactList.Models.Categoria

@{
    ViewData["Title"] = "Excluir categoria";
}

<h1 class="text-white"> @ViewData["Title"] </h1>


<div class="mt-3 dd-custom">
    <h3> Tem certeza de que deseja excluir esta categoria? </h3>
    <p class="text-danger">
        Todos os contatos relacionados a esta categoria também serão excluídos.
    </p>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index"> <i class="fas fa-chevron-left"></i></a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
