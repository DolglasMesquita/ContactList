@model ContactList.Models.Contato

@{
    ViewData["Title"] = "Excluir";
}

<h1 class="text-white"> Excluir contato </h1>


<div class="mt-3 dd-custom">
    <h3 > Tem certeza de que deseja excluir o contato? </h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10 ">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2 ">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10 ">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index"> <i class="fas fa-chevron-left"></i></a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
